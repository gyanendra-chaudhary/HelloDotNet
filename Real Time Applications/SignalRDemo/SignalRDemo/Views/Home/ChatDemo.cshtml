@{
    ViewData["Title"] = "Chat Demo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Chat Demo</h2>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Chat Messages (Left Side) -->
                        <div class="col-md-7 border-end">
                            <div class="p-3">
                                <h3 class="h6 mb-3 text-muted">Messages</h3>
                                <ul id="messageList" class="list-unstyled chat-list mb-0">
                                    <!-- Messages will appear here -->
                                </ul>
                            </div>
                        </div>

                        <!-- Input Controls (Right Side) -->
                        <div class="col-md-5 d-flex flex-column">
                            <div class="p-3 flex-grow-1">
                                <div class="mb-3">
                                    <label for="txtUser" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="txtUser" placeholder="Enter your name">
                                </div>

                                <div class="mb-3">
                                    <label for="txtMessage" class="form-label">Message</label>
                                    <textarea class="form-control" id="txtMessage" rows="5" placeholder="Type your message here..."></textarea>
                                </div>
                            </div>

                            <div class="p-3 border-top">
                                <button class="btn btn-primary w-100" id="btnSendMessage">
                                    <i class="bi bi-send-fill me-2"></i>Send Message
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .chat-list {
        height: 400px;
        overflow-y: auto;
        padding-right: 10px;
    }

        .chat-list li {
            padding: 10px 15px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #eee;
            position: relative;
        }

            .chat-list li:after {
                content: '';
                position: absolute;
                left: -8px;
                top: 15px;
                width: 0;
                height: 0;
                border-top: 8px solid transparent;
                border-bottom: 8px solid transparent;
                border-right: 8px solid #f8f9fa;
            }

            .chat-list li strong {
                color: #0d6efd;
                display: block;
                margin-bottom: 4px;
                font-size: 0.9rem;
            }

            .chat-list li span {
                display: block;
                font-size: 0.9rem;
                color: #495057;
            }

    @@media (max-width: 767.98px) {
        .border-end {
            border-right: none !important;
            border-bottom: 1px solid #dee2e6 !important;
        }

        .chat-list {
            height: 300px;
        }
    }
</style>


@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}